<div class="form-container">
  <h1>Dates de location du poilu</h1>
 <%= simple_form_for [@poilu, @booking] do |f| %>
  <%= f.input :start_date, as: :date_time_picker, placeholder: '2020-02-21', input_html:
    { data:
      {
        date_format: "YYYY-MM-DD",
        date_day_view_header_format: 'MMM YYYY',
        date_side_by_side: true,
        date_min_date: Time.current.strftime('%Y-%m-%d'),
      }
    }%>

    <%= f.input :end_date, as: :date_time_picker, placeholder: '2020-02-27', input_html:
    { data:
      {
        date_side_by_side: true,
        date_day_view_header_format: 'MMM YYYY',
        date_format: 'YYYY-MM-DD',
        date_min_date: Time.current.strftime('%Y-%m-%d')
      }
    }
    %>
    <div class="buttoncalendar">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>

<script>
  const calendar = document.querySelectorAll('.input-group-btn');
  calendar.forEach(c => c.remove());
</script>
