<div class="form-container">
 <%= simple_form_for [@poilu, @booking], :method => :put do |f| %>
    <h2>Modifier les dates</h2>
    <% if @booking.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @booking.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <%= f.input :start_date, as: :date, html5: true, :label => "Du"%>
    <%= f.input :end_date, as: :date, html5: true, :label => "Au"%>
    <%= f.submit "Modifier", class: "bouton bouton-2" %>
  <% end %>
</div>


