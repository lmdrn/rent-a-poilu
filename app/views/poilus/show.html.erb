<div class="showcontainer">
<div class="show-img" style="background-image: url(<%= @poilu.photo.attached? ? cl_image_path(@poilu.photo.key) : image_path("default.jpg") %>); background-size: cover;">
      <% if policy(@poilu).destroy? %>
          <p><%= link_to '<i class="fas fa-trash-alt"></i> Supprimer'.html_safe, poilu_path(@poilu), method: :delete, data: { confirm: "Are you sure?" }, class: 'link'  %> </p>
      <% end %>

      <% if policy(@poilu).edit? %>
        <p><%= link_to '<i class="fas fa-edit"></i> Éditer'.html_safe, edit_poilu_path, class: 'link'  %></p>
      <% end %>

  </div>

  <div class="description">

    <h2><%= @poilu.name %></h2>
    <div class="align-location">
      <p><i class="fas fa-map-marker-alt"></i><%= @poilu.location %></p>
      <% if policy(@poilu).edit? %>
        <p>Ce poilu m'appartient</p>
      <% else %>
        <p>Ce poilu appartient à <%= @poilu.user.username %></p>
      <% end %>
    </div>
    <div class="container-description legendes text-medium">
      <h3>À propos de ce Poilu</h3>

      <p><%= @poilu.description %></p>
    </div>
    <p><%= @poilu.price %> CHF/jour</p>
    <div><%= link_to "Je le veux", new_poilu_booking_path(@poilu), class: "bouton bouton-2 boutton-show" %></div>

    <p><%= link_to '<i class="fas fa-chevron-left"></i> Retour'.html_safe, poilus_path, class: 'link back' %></p>
  </div>
</div>
